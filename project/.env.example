# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Deployment Environment
# Set to "DEV" or "LOCAL" to use server-side API keys (for local development)
# Set to "PROD" or leave empty to require users to provide their own keys (for remote deployment)
# Default in example: DEV (server-side keys used for local development)
ENVIRONMENT=DEV

# AI Provider Configuration
# Choose which AI provider to use: 'gemini' or 'claude'
AI_PROVIDER=gemini

# Gemini AI Configuration (DEV/LOCAL mode only)
# Get your API key from: https://aistudio.google.com/app/apikey
# Only required when ENVIRONMENT=DEV or ENVIRONMENT=LOCAL
GEMINI_API_KEY=your-gemini-api-key-here

# Claude AI Configuration (DEV/LOCAL mode only)
# Get your API key from: https://console.anthropic.com/
# Only required when ENVIRONMENT=DEV or ENVIRONMENT=LOCAL
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database (optional, defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost/dbname
